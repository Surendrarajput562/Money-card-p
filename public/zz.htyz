        async function submitLoanApplication() {
            if (!pinValidated) return startPinValidation(); // Pin check added
            
            const btn = document.querySelector('#view-calculator .btn');
            btn.disabled = true;
            btn.innerText = 'Submitting...';

            const amt = document.getElementById('calc-amt').value;
            const tenure = document.getElementById('calc-tenure').value;
            const lid = 'L' + Date.now();

            const vSnap = await db.ref(`users/${currentUser.uid}/loan_verification`).once('value');
            const v = vSnap.val();

            if(!v || !v.step5_completed) { 
                btn.disabled = false; btn.innerText = 'Apply for Loan';
                return alert("Error: All 5 verification steps must be completed before applying.");
            }
            
            // Re-apply eligibility check (MOCK LOGIC)
            const appSnap = await db.ref(`users/${currentUser.uid}/loan_app`).once('value');
            const lastApp = appSnap.val() || {};

            if (lastApp.status === 'rejected' || lastApp.status === 'rejected_by_user') {
                btn.disabled = false; btn.innerText = 'Apply for Loan';
                return alert("You were recently rejected and are not eligible to re-apply yet.");
            }
            
            // Due payment check: 6 months wait
            if (lastApp.status === 'closed' && lastApp.is_defaulted) {
                const diffTime = Math.abs(Date.now() - (lastApp.closed_at || 0));
                const diffMonths = Math.ceil(diffTime / (1000 * 60 * 60 * 24 * 30.44));
                if (diffMonths < 6) {
                    btn.disabled = false; btn.innerText = 'Apply for Loan';
                    return alert(`You defaulted on your last loan. Please wait ${6 - diffMonths} more months to re-apply.`);
                }
            }


            const monthlyEMI = Math.round(parseInt(amt) / parseInt(tenure));

            const payload = {
                id: lid,
                user_id: currentUser.uid,
                mobile: document.getElementById('profile-mobile').value, 
                amount_req: amt,
                tenure_req: tenure,
                status: 'pending',
                created_at: Date.now(),
                approved_amount: parseInt(amt), 
                approved_tenure: parseInt(tenure),
                processing_fee: 0, 
                net_disbursal: parseInt(amt),
                emi_amount: monthlyEMI,
                total_repayment: parseInt(amt),
                verification_data: {
                    basic: v.step1_data,
                    identity: v.step2_data,
                    bank: v.step3_data,
                    work: v.step4_data,
                    address: v.step5_data
                },
                emis: {} 
            };

            for(let i = 1; i <= parseInt(tenure); i++) {
                const dueDate = new Date();
                dueDate.setMonth(dueDate.getMonth() + i);
                dueDate.setDate(5); 
                
                payload.emis['emi_' + i] = {
                    id: 'emi_' + i,
                    num: i,
                    amount: monthlyEMI,
                    due_date: dueDate.getTime(),
                    status: 'pending' 
                };
            }


            try {
                await db.ref('loan_requests/'+lid).set(payload);
                await db.ref('users/'+currentUser.uid+'/loan_app').set({
                    loan_id: lid, 
                    status: 'pending', 
                    applied_at: Date.now(),
                    is_reapply_eligible: false, // Reset eligibility
                    is_defaulted: false
                });

                alert("Application Submitted! Admin has received your documents and request.");
                checkLoanStep();
            } catch (error) {
                alert("Submission failed: " + error.message);
            } finally {
                btn.disabled = false;
                btn.innerText = 'Apply for Loan';
            }
        }

