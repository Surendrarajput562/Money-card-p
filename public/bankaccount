<script>
    function openSecure(url) {
        // Window dimensions
        const width = 450;
        const height = 700;
        const left = (window.innerWidth / 2) - (width / 2);
        const top = (window.innerHeight / 2) - (height / 2);

        // Naya window popup jo bilkul app jaisa dikhega
        const bankWindow = window.open(url, 'BankWindow', 
            `width=${width},height=${height},top=${top},left=${left},scrollbars=yes,status=no,toolbar=no,menubar=no`
        );

        if (bankWindow) {
            document.getElementById('status').innerHTML = `
                <div style="color: #10b981;">
                    <i class="ri-lock-check-fill" style="font-size: 40px;"></i>
                    <p><strong>Bank Portal Khul Gaya Hai!</strong><br>
                    Apna account process naye window mein poora karein.<br>
                    Process khatam hone ke baad isse band kar dein.</p>
                    <button onclick="location.reload()" style="padding: 10px 20px; border-radius: 8px; border: none; background: #2563eb; color: white; cursor: pointer; margin-top: 10px;">Select Another Bank</button>
                </div>
            `;
        } else {
            alert("Kripya Popup Allow karein browser settings se!");
        }
    }
</script>

