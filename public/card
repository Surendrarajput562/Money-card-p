                <div class="balance-amount">₹ <span id="balance">0.00</span></div>
            </div>
        </div>
    </div>

    <div class="payment-box">
        <input type="text" id="name-input" placeholder="Enter Your Name" oninput="updateCardName()">
        <input type="number" id="amount-input" placeholder="Enter Amount (₹)">
        <button class="btn-add" onclick="generatePayment()">Add Money to Card</button>

        <div id="qr-section">
            <p style="font-size: 13px;">Scan this QR to Pay</p>
            <div id="qr-container"></div>
            <p style="font-size: 11px; color: var(--gold); margin-top: 5px;" id="payment-note"></p>
            
            <div class="utr-box" id="utr-section">
                <input type="text" id="utr-input" placeholder="Enter UTR / Trans. ID">
                <button class="btn-add" style="background: #27ae60; color: white;" onclick="submitUTR()">Submit & Add Balance</button>
            </div>
        </div>
    </div>

    <script>
        let currentBalance = 0;
        const myUpi = "aapki-upi@okaxis"; // <--- APNI UPI ID YAHAN DALO

        function updateCardName() {
            let name = document.getElementById('name-input').value;
            document.getElementById('display-name').innerText = name || "USER NAME";
        }

        function generatePayment() {
            let amount = document.getElementById('amount-input').value;
            let name = document.getElementById('name-input').value;

            if(!amount || !name) {
                alert("Please enter Name and Amount");
                return;
            }

            // UPI Deep Link with Note
            let upiUrl = `upi://pay?pa=${myUpi}&pn=LibraryApp&tn=CardAdd_${name}&am=${amount}&cu=INR`;
            
            // Generate QR Code URL
            let qrUrl = `https://api.qrserver.com/v1/create-qr-code/?size=150x150&data=${encodeURIComponent(upiUrl)}`;
            
            document.getElementById('qr-container').innerHTML = `<img src="${qrUrl}" alt="QR Code">`;
            document.getElementById('payment-note').innerText = `Note: CardAdd_${name}`;
            document.getElementById('qr-section').style.display = 'block';
            document.getElementById('utr-section').style.display = 'block';
        }

        function submitUTR() {
            let utr = document.getElementById('utr-input').value;
            let amount = parseFloat(document.getElementById('amount-input').value);

            if(utr.length < 6) {
                alert("Please enter a valid UTR number");
                return;
            }

            // Real app mein yahan Admin approval chahiye hoga
            // Test ke liye hum turant add kar rahe hain
            alert("UTR Submitted! Admin will verify and update balance.");
            
            // Dummy logic for testing
            currentBalance += amount;
            document.getElementById('balance').innerText = currentBalance.toFixed(2);
            
            // Reset
            document.getElementById('qr-section').style.display = 'none';
            document.getElementById('utr-input').value = "";
        }
    </script>
