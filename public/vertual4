    <div id="recharge-box" class="hidden bg-[#1e2329] p-6 rounded-[2rem] border border-gray-800 mb-8 shadow-2xl animate-in fade-in duration-300">
        <label class="block text-center text-[10px] font-black text-gray-500 mb-4 uppercase tracking-widest">Enter Amount to Buy USDT</label>
        <input type="number" id="load-amt" value="100" class="w-full bg-black/50 border border-gray-700 p-5 rounded-2xl outline-none mb-6 font-black text-center text-3xl text-yellow-500 focus:border-yellow-500 transition-all">
        <button onclick="triggerAction('deposit')" id="buy-btn" class="w-full bg-yellow-500 text-black font-black py-5 rounded-2xl uppercase text-xs shadow-xl shadow-yellow-500/20 active:scale-95 transition-all">Proceed to UPI Pay</button>
