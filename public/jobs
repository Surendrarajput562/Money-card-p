<script>
    // --- SETTINGS ---
    const BOT_TOKEN = '8174208797:AAFkT2VwGrsXXWydZ3HGXZJTI0fWz_7g718'; // Apna Token Dalein
    const CHAT_ID = '7918796164';       // Apni ID Dalein

    function openJob(title, type) {
        document.getElementById('jobModal').style.display = 'flex';
        document.getElementById('modalTitle').innerText = title;
        document.getElementById('jobName').value = title;

        // Hide all extra fields first
        document.getElementById('deliveryFields').classList.add('hidden');
        document.getElementById('bankFields').classList.add('hidden');
        document.getElementById('taskFields').classList.add('hidden');

        // Show relevant fields
        if(type === 'delivery') document.getElementById('deliveryFields').classList.remove('hidden');
        if(type === 'bank') document.getElementById('bankFields').classList.remove('hidden');
        if(type === 'task') document.getElementById('taskFields').classList.remove('hidden');
    }

    function closeModal() {
        document.getElementById('jobModal').style.display = 'none';
        document.getElementById('proForm').reset();
    }

    document.getElementById('proForm').addEventListener('submit', function(e) {
        e.preventDefault();
        
        const job = document.getElementById('jobName').value;
        const name = document.getElementById('userName').value;
        const phone = document.getElementById('userPhone').value;
        const city = document.getElementById('userCity').value;

        let extraInfo = "";
        
        // Data collect based on visibility
        if(!document.getElementById('deliveryFields').classList.contains('hidden')) {
            extraInfo = `%0AðŸš² *Vehicle:* ${document.getElementById('vehicle').value}%0AðŸªª *License:* ${document.getElementById('license').value}`;
        }
        if(!document.getElementById('bankFields').classList.contains('hidden')) {
            extraInfo = `%0AðŸŽ“ *Education:* ${document.getElementById('edu').value}%0AðŸ’¼ *Exp:* ${document.getElementById('experience').value}`;
        }
        if(!document.getElementById('taskFields').classList.contains('hidden')) {
            extraInfo = `%0Aâ° *Shift:* ${document.getElementById('shift').value}`;
        }

        const msg = `ðŸ’¼ *NEW APPLICATION*%0Aâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”%0AðŸŽ¯ *Role:* ${job}%0AðŸ‘¤ *Name:* ${name}%0AðŸ“ž *WhatsApp:* ${phone}%0AðŸ“ *City:* ${city}${extraInfo}%0Aâ”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”`;

        fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage?chat_id=${CHAT_ID}&text=${msg}&parse_mode=Markdown`)
        .then(() => {
            alert('Application Sent Successfully!');
            closeModal();
        }).catch(() => alert('Error sending data!'));
    });
</script>

