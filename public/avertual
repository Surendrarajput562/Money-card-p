<script>
    const firebaseConfig = {
        apiKey: "AIzaSyCZ5P2t5xRhy5d0IXV6UWcvbkUWXqyPENA",
        authDomain: "smbrand-4543a.firebaseapp.com",
        databaseURL: "https://smbrand-4543a-default-rtdb.firebaseio.com",
        projectId: "smbrand-4543a",
        appId: "1:720775550032:web:0622548a007597778bad55"
    };

    firebase.initializeApp(firebaseConfig);
    const db = firebase.database();
    const auth = firebase.auth();
    let currentSelectedUser = null;

    function startRealtimeSync() {
        db.ref('users').on('value', snap => {
            const container = document.getElementById('user-rows');
            let pCount = 0;
            const users = [];
            snap.forEach(child => {
                const u = child.val();
                u.id = child.key;
                users.push(u);
                if(u.status?.includes('pending')) pCount++;
            });

            container.innerHTML = users.reverse().map(u => `
                <tr id="row-${u.id}" class="hover:bg-white/[0.02] transition-all group">
                    <td class="p-5">
                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-gray-800 to-black flex items-center justify-center font-bold text-yellow-500 border border-gray-700">
                                ${u.fullName ? u.fullName[0] : 'U'}
                            </div>
                            <div>
                                <p class="font-bold text-white text-base leading-none">${u.fullName || 'Anonymous'}</p>
                                <p class="text-[11px] text-gray-500 mt-1 font-mono">${u.mobile || u.id}</p>
                            </div>
                        </div>
                    </td>
                    <td class="p-5">
                        <p class="font-mono text-xs text-gray-300 tracking-wider">${u.cardNo ? '**** **** **** ' + u.cardNo.slice(-4) : 'üí≥ NOT ASSIGNED'}</p>
                        <div class="flex gap-3 mt-1 text-[9px] text-gray-500 font-bold">
                            <span>EXP: ${u.expiry || '--/--'}</span>
                        </div>
                    </td>
                    <td class="p-5 text-right font-black text-green-500">‚Çπ${(u.balance || 0).toLocaleString('en-IN')}</td>
                    <td class="p-5">
                        <span class="px-3 py-1 rounded-full text-[9px] font-black uppercase tracking-widest border ${getStatusStyle(u.status)}">
                            ${u.status || 'NEW'}
                        </span>
                    </td>
                    <td class="p-5 text-center">
                        <button onclick="openControlPanel('${u.id}')" class="bg-white text-black text-[10px] font-black px-4 py-2 rounded-xl hover:bg-yellow-500 transition-all uppercase">MANAGE</button>
                    </td>
                </tr>
            `).join('');

            document.getElementById('stat-users').innerText = snap.numChildren();
            document.getElementById('stat-pending').innerText = pCount;
        });
    }

    function getStatusStyle(s) {
        if(s === 'active') return 'text-green-500 border-green-500/20 bg-green-500/5';
        if(s === 'blocked') return 'text-red-500 border-red-500/20 bg-red-500/5';
        return 'text-yellow-500 border-yellow-500/20 bg-yellow-500/5';
    }

    async function openControlPanel(uid) {
        currentSelectedUser = uid;
        const snap = await db.ref(`users/${uid}`).get();
        const u = snap.val();
        
        document.getElementById('panel-uid').innerText = "ACCOUNT ID: " + uid;
        document.getElementById('panel-body').innerHTML = `
            <div class="bg-black/30 p-5 rounded-2xl border border-gray-800 space-y-4">
                <h4 class="text-xs font-bold text-gray-500 uppercase tracking-widest">Client Profile</h4>
                <input type="text" id="edit-name" value="${u.fullName || ''}" class="w-full bg-black border border-gray-700 p-3 rounded-xl text-sm">
                <input type="text" id="edit-mobile" value="${u.mobile || ''}" class="w-full bg-black border border-gray-700 p-3 rounded-xl text-sm">
            </div>

            <div class="bg-yellow-500/5 p-5 rounded-2xl border border-yellow-500/20 space-y-4">
                <h4 class="text-xs font-bold text-yellow-500 uppercase tracking-widest">Force Card Issuance</h4>
                <input type="text" id="edit-card" value="${u.cardNo || ''}" placeholder="16-Digit Card Number" class="w-full bg-black border border-gray-700 p-3 rounded-xl text-sm font-mono tracking-widest">
                <div class="grid grid-cols-2 gap-4">
                    <input type="text" id="edit-exp" value="${u.expiry || '12/28'}" placeholder="MM/YY" class="bg-black border border-gray-700 p-3 rounded-xl text-sm">
                    <input type="text" id="edit-cvv" value="${u.cvv || '***'}" placeholder="CVV" class="bg-black border border-gray-700 p-3 rounded-xl text-sm">
                </div>
                <button type="button" onclick="forceIssueCard(event)" class="w-full bg-yellow-500 text-black font-black py-4 rounded-2xl text-[10px] uppercase shadow-lg hover:scale-[0.98] transition-all">Issue & Bypass Payment</button>
            </div>

            <div class="bg-green-500/5 p-5 rounded-2xl border border-gray-800 flex gap-2">
                <input type="number" id="adj-amt" placeholder="Amt" class="flex-1 bg-black border border-gray-700 p-3 rounded-xl text-sm">
                <button onclick="adjustBalance()" class="bg-green-600 px-4 rounded-xl font-black text-[10px] uppercase">Add Balance</button>
            </div>

            <button onclick="changeStatus('blocked')" class="w-full bg-red-500/10 text-red-500 border border-red-500/20 py-4 rounded-2xl text-[10px] font-black uppercase">Block Account</button>
        `;
        document.getElementById('side-panel').classList.remove('translate-x-full');
    }

    // --- ‚ö° BYPASS & FORCE ENGINE ---
    async function forceIssueCard(e) {
        if(e) e.preventDefault();
        
        const btn = e.target;
        btn.innerText = "BYPASSING PERMISSIONS...";
        btn.disabled = true;

        const uid = currentSelectedUser;
        const updates = {};
        
        // Multi-path update se permission errors kam aate hain
        updates[`/users/${uid}/status`] = 'active';
        updates[`/users/${uid}/cardNo`] = document.getElementById('edit-card').value;
        updates[`/users/${uid}/expiry`] = document.getElementById('edit-exp').value;
        updates[`/users/${uid}/cvv`] = document.getElementById('edit-cvv').value;
        updates[`/users/${uid}/isIssued`] = true;
        updates[`/users/${uid}/paymentStatus`] = 'verified';

        try {
            // Seedha root se update
            await db.ref().update(updates);
            showToast("‚úÖ ACCOUNT ACTIVATED & CARD ISSUED!");
            closePanel();
        } catch (err) {
            console.error(err);
            alert("Permission Error: Bhai aapka Admin Email rules me matched nahi hai!");
        } finally {
            btn.innerText = "Issue & Bypass Payment";
            btn.disabled = false;
        }
    }

    async function adjustBalance() {
        const amt = parseFloat(document.getElementById('adj-amt').value);
        if(!amt) return;
        await db.ref(`users/${currentSelectedUser}/balance`).transaction(c => (c || 0) + amt);
        showToast("Balance Updated!");
    }

    async function changeStatus(s) {
        await db.ref(`users/${currentSelectedUser}`).update({ status: s });
        showToast(`Account: ${s}`);
        closePanel();
    }

    function closePanel() { document.getElementById('side-panel').classList.add('translate-x-full'); }
    function showToast(msg) {
        const t = document.getElementById('toast');
        document.getElementById('toast-msg').innerText = msg;
        t.classList.remove('translate-x-full');
        setTimeout(() => t.classList.add('translate-x-full'), 3000);
    }
    function searchUser() {
        const val = document.getElementById('userSearch').value.toLowerCase();
        document.querySelectorAll('#user-rows tr').forEach(r => r.style.display = r.innerText.toLowerCase().includes(val) ? '' : 'none');
    }

    auth.onAuthStateChanged(u => u ? startRealtimeSync() : null);
</script>
</body>
</html>
