    <script>
        const BACKEND = 'https://money-card-p.vercel.app';
        let btcPrice = 0;

        async function fetchLivePrice() {
            try {
                const res = await fetch(`${BACKEND}/api/price?symbol=BTC`);
                const data = await res.json();
                btcPrice = parseFloat(data.price);
                document.getElementById('ref-price').innerText = btcPrice.toLocaleString();
                updateCalculations();
            } catch (e) { console.log("Price Error"); }
        }

        function updateCalculations() {
            const spend = document.getElementById('spend-input').value;
            if(btcPrice > 0 && spend > 0) {
                document.getElementById('receive-input').value = (spend / btcPrice).toFixed(8);
            }
        }

        async function startPurchase() {
            // Yahan tu redirect karega P2P ya 3rd party link par
            alert("Redirecting to Secure Payment Gateway...");
            window.location.href = "https://simplex.com"; 
        }

        document.getElementById('spend-input').addEventListener('input', updateCalculations);
        setInterval(fetchLivePrice, 5000); fetchLivePrice();
    </script>
