    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.10.0/firebase-database.js"></script>

    <script>
        // CONFIGURATION
        const VERCEL_URL = "https://money-card-p.vercel.app";
        const firebaseConfig = { 
            apiKey: "AIzaSyCZ5P2t5xRhy5d0IXV6UWcvbkUWXqyPENA",
            authDomain: "smbrand-4543a.firebaseapp.com",
            databaseURL: "https://smbrand-4543a-default-rtdb.firebaseio.com",
            projectId: "smbrand-4543a",
            appId: "1:720775550032:web:0622548a007597778bad55"
        };
        firebase.initializeApp(firebaseConfig);
        const db = firebase.database();
        let userUID = "";

        firebase.auth().onAuthStateChanged(user => {
            if(user) { 
                userUID = user.uid; 
                syncFlow(); 
            } else { 
                window.location.href = "login.html"; 
            }
        });

        // Backend aur Frontend ko jodne wala logic
        function syncFlow() {
            db.ref(`users/${userUID}/profile`).on('value', snap => {
                const data = snap.val() || {};
                const currentStep = data.step || 'LANDING';
                
                // Fields auto-fill
                if(data.name) document.getElementById('inName').value = data.name;
                if(data.phone) document.getElementById('inPhone').value = data.phone;
                if(data.registered_name) document.getElementById('finalName').innerText = data.registered_name;
                
                // Step switching logic
                document.querySelectorAll('.step-card').forEach(c => c.classList.remove('step-active'));
                const el = document.getElementById('step-' + currentStep);
                if(el) el.classList.add('step-active');
                
                // Status tag UI
                const statusTag = document.getElementById('statusTag');
                statusTag.innerText = currentStep === 'COMPLETED' ? 'Verified' : 'Step: ' + currentStep;
            });
        }

        async function saveBasics() {
            const name = document.getElementById('inName').value;
            const phone = document.getElementById('inPhone').value;
            if(!name || !phone) return alert("Bhai, details to dalo!");
            
            await db.ref(`users/${userUID}/profile`).update({ 
                name: name, 
                phone: phone, 
                step: 'PAN' 
            });
        }

        async function verifyPAN() {
            const pan = document.getElementById('inPan').value.trim();
            const name = document.getElementById('inName').value;
            const btn = document.getElementById('btnPan');
            const resultBox = document.getElementById('panResult');
            
            if(pan.length !== 10) return alert("Sahi PAN Number dalo (10 digits)!");
            
            btn.innerHTML = `<i class="fas fa-circle-notch animate-spin mr-2"></i> Verifying...`;
            btn.disabled = true;

            try {
                // YE LINE BACKEND (INDEX.JS) SE CONNECT KARTI HAI
                const res = await fetch(`${VERCEL_URL}/api/verify-pan`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ pan, userId: userUID, name })
                });
                
                const data = await res.json();
                
                if(data.success) {
                    btn.innerHTML = "VERIFIED âœ…";
                    btn.className = "w-full bg-green-500 text-white py-4 rounded-xl font-bold shadow-lg";
                    resultBox.innerHTML = `<i class="fas fa-user-check mr-2"></i> Matches: ${data.registered_name}`;
                    resultBox.classList.remove('hidden');
                    // SyncFlow apne aap next step (DIGILOCKER) par le jayega
                } else {
                    alert("PAN Verification Failed: " + data.message);
                    btn.disabled = false;
                    btn.innerHTML = "Try Again";
                }
            } catch (e) {
                console.error(e);
                alert("Vercel Backend Error! Server check karo.");
                btn.disabled = false;
                btn.innerHTML = "Verify & Continue";
            }
        }

        async function openDigi() {
            const btn = document.getElementById('btnDigi');
            btn.innerHTML = `<i class="fas fa-circle-notch animate-spin mr-2"></i> Generating URL...`;
            
            try {
                const res = await fetch(`${VERCEL_URL}/api/create-digilocker-url`, { 
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify({ userId: userUID })
                });
                const data = await res.json();
                if(data.url) {
                    window.location.href = data.url;
                } else {
                    alert("DigiLocker URL generate nahi hui.");
                    btn.innerText = "Try Again";
                }
            } catch (e) {
                alert("Backend Connection Error!");
                btn.innerText = "Open DigiLocker";
            }
        }

        function changeStep(s) {
            db.ref(`users/${userUID}/profile`).update({ step: s });
        }
    </script>
</body>
</html>
