    <script>
        // Firebase config yahan teri purani wali hi rahegi
        // Login process vaisa hi rahega jaisa pehle tha [cite: 2025-12-21]

        let balance = 0;
        function startStreaming() {
            const receiver = document.getElementById('receiver').value;
            if(!receiver) return alert("Receiver Pointer Daalo!");
            
            // Simulation of ILP Streaming Packets
            setInterval(() => {
                balance += 0.0012;
                document.getElementById('stream-display').innerText = "INR " + balance.toFixed(4);
            }, 500);
        }

        // Dedicated Logout Feature [cite: 2025-12-21]
        function logout() {
            // Firebase signOut call
            // firebase.auth().signOut().then(() => { ... });
            
            console.log("Logging out... login process remains the same [cite: 2025-12-21]");
            
            // Page reload for clean session reset as per instruction [cite: 2025-12-21]
            window.location.reload(); 
        }
    </script>
